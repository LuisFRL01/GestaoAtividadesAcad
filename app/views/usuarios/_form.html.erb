<%= form_with(model: usuario, local: true) do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :usuario_email %>
  </div>

  <div class="field">
    <%= form.label :senha %>
    <%= form.password_field :senha, id: :usuario_senha %>
  </div>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome, id: :usuario_nome %>
  </div>

  <div class="field">
    <%= form.label :cpf %>
    <%= form.text_field :cpf, id: :usuario_cpf, placeholder: "Ex: 000.000.000-00" %>
  </div>

  <div class="field">
    <%= form.label :curso %>
    <%= form.text_field :curso, id: :usuario_curso %>
  </div>

  <div class="field">
    <%= form.label "Especificação" %>
    <%= form.select :especificao, ['Estudante','Professor Colaborador'], id: :usuario_especificao%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
