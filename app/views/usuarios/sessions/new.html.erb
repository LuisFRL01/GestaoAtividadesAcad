

<div class="login" >
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
    <div class="col-sm rotulo" style="text-align: center">
      <h2>Log in</h2>
    </div>
    </div>
    <div class="row">
    <div class="col-sm">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class => "form-control", placeholder: "E-mail" %>
    </div>
    </div><br/>
    <div class="row">
      <div class="col-sm">
        <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", placeholder: "Senha"%>
      </div>
    </div><br/>
    <div class="row">
      <div class="col-sm ">
        <%= f.submit "Log in", :class => "btn btn-primary" %>
      </div>
      <div class="col-sm rotulo">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm ">

      </div>
      <div class="col-sm rotulo">
        <%= render "usuarios/shared/links" %>
      </div>

    </div>
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show"><%= alert %></div>
    <% end %>


  <% end %>
</div>


